<body>
    <!-- Floral decorations -->
    <div class="flower flower1">ðŸŒ¸</div>
    <div class="flower flower2">ðŸŒ¹</div>
    <div class="flower flower3">ðŸŒ¸</div>
    <div class="flower flower4">ðŸŒ¹</div>
    
    <div class="container">
        <h1>Will you be my valentine, Ava? ðŸ’™</h1>
        
        <div class="romantic-message">
            <p>From the moment you came into my life, every day became a beautiful garden of moments with you. Like peonies and garden roses in full bloom, your love makes everything more beautiful.</p>
            <p style="margin-top: 15px;">I can't imagine my life without you. So, will you be my valentine?</p>
        </div>
        
        <div class="buttons-container">
            <button class="button yes-button" onclick="handleYes()">Yes ðŸ’–</button>
            <button class="button no-button" onclick="handleNo(event)">No ðŸ™ƒ</button>
        </div>
        
        <div class="success-message">
            ðŸŽ‰ You've made me the happiest person alive, Ava! ðŸŽ‰
        </div>
    </div>
    
    <script>
        let noButtonClickCount = 0;
        
        function handleYes() {
            const yesButton = document.querySelector('.yes-button');
            yesButton.style.transform = `scale(${1 + noButtonClickCount * 0.2})`;
            
            if (noButtonClickCount >= 3) {
                document.querySelector('.success-message').style.display = 'block';
                document.querySelector('.buttons-container').style.opacity = '0.5';
                document.querySelector('.buttons-container').style.pointerEvents = 'none';
            }
        }
        
        function handleNo(event) {
            noButtonClickCount++;
            const noButton = event.target;
            
            // Shrink the button
            noButton.style.transform = `scale(${Math.max(0.3, 1 - noButtonClickCount * 0.3)})`;
            
            // Move button to random position
            const randomX = Math.random() * 80 - 40;
            const randomY = Math.random() * 80 - 40;
            noButton.style.position = 'relative';
            noButton.style.left = randomX + 'px';
            noButton.style.top = randomY + 'px';
            
            // Change text after a few clicks
            if (noButtonClickCount === 2) {
                noButton.innerText = 'Really? ðŸ˜”';
            } else if (noButtonClickCount === 3) {
                noButton.innerText = 'Say yes! ðŸ¥º';
            } else if (noButtonClickCount >= 4) {
                noButton.innerText = 'Just yes! ðŸ’•';
            }
        }
    </script>
